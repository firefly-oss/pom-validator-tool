<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>
    
    <!-- Missing groupId -->
    <artifactId>Bad Example</artifactId>  <!-- Spaces in artifact ID -->
    <version>LATEST</version>  <!-- Deprecated version -->
    
    <dependencies>
        <!-- Duplicate dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.13</version>  <!-- Version conflict -->
        </dependency>
        
        <!-- Test dependency without test scope -->
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>RELEASE</version>  <!-- Deprecated version -->
        </dependency>
        
        <!-- Missing version and no dependency management -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
        </dependency>
    </dependencies>
    
    <repositories>
        <repository>
            <id>insecure-repo</id>
            <url>http://insecure-repo.example.com/maven2</url>  <!-- HTTP instead of HTTPS -->
        </repository>
    </repositories>
</project>
